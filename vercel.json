{
  "version": 2,
  "builds": [
    {
      "source": "api/app",
      "use": "@vercel/python",
      "configuration": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12",
        "installCommand": "pip install --upgrade pip && pip install -r requirements.txt"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "api/app"
    }
  ]
}